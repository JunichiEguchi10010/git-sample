    },
  
    "_comment_bgimg": "画像 (背景画像)",
    "bg-img": {
      "prefix": "bg-image",
      "body": [
        "background: url(../img/$1) no-repeat center center / cover; // 背景画像"
      ],
      "description": "背景画像を設定（中央寄せ・cover）"
    },
  
    "_comment_pseudo": "擬似要素 (before/after)",
    "before": {
      "prefix": "before",
      "body": [
        "&::before {",
        "    content: ''; // 必須",
        "    position: absolute; // 絶対配置",
        "}"
      ],
      "description": "before擬似要素の基本"
    },
  
    "after": {
      "prefix": "after",
      "body": [
        "&::after {",
        "    content: ''; // 必須",
        "    position: absolute; // 絶対配置",
        "}"
      ],
      "description": "after擬似要素の基本"
    },
  
    "before-line": {
      "prefix": "before-line",
      "body": [
        "&::before {",
        "    content: '';",
        "    position: absolute;",
        "    width: 100%; height: 1px;",
        "    background: $1;",
        "    $2 // 追加スタイル",
        "}"
      ],
      "description": "横線をbeforeで作成"
    },
  
    "after-line": {
      "prefix": "after-line",
      "body": [
        "&::after {",
        "    content: '';",
        "    position: absolute;",
        "    width: 100%; height: 1px;",
        "    background: $1;",
        "    $2 // 追加スタイル",
        "}"
      ],
      "description": "横線をafterで作成"
    },
  
    "before-circ": {
      "prefix": "before-circ",
      "body": [
        "&::before {",
        "    content: '';",
        "    position: absolute;",
        "    width: $1; height: auto;",
        "    aspect-ratio: 1;",
        "    border: 1px solid $2;",
        "    border-radius: 50%;",
        "    $3 // 追加スタイル",
        "}"
      ],
      "description": "円をbeforeで作成"
    },
  
    "after-circ": {
      "prefix": "after-circ",
      "body": [
        "&::after {",
        "    content: '';",
        "    position: absolute;",
        "    width: $1; height: auto;",
        "    aspect-ratio: 1;",
        "    border: 1px solid $2;",
        "    border-radius: 50%;",
        "    $3 // 追加スタイル",
        "}"
      ],
      "description": "円をafterで作成"
    },
  
    "before-arrow": {
      "prefix": "before-arrow",
      "body": [
        "&::before {",
        "    content: '';",
        "    position: absolute;",
        "    width: $1; height: auto;",
        "    aspect-ratio: 1;",
        "    border-right: $2px solid $3;",
        "    border-bottom: $2px solid $3;",
        "    $4 // 回転や配置",
        "}"
      ],
      "description": "矢印をbeforeで作成"
    },
    
    "after-arrow": {
      "prefix": "after-arrow",
      "body": [
        "&::after {",
        "    content: '';",
        "    position: absolute;",
        "    width: $1; height: auto;",
        "    aspect-ratio: 1;",
        "    border-right: $2px solid $3;",
        "    border-bottom: $2px solid $3;",
        "    $5 // 回転や配置",
        "}"
      ],
      "description": "矢印をafterで作成"
    },
  
    "_comment_grid": "レイアウト(Grid)",
    "grid": {
      "prefix": "grid",
      "body": [
        "// ============================================",
        "// グリッドレイアウト用の個別アイテムの指定",
        "// grid-column: 開始列 / 終了列",
        "// grid-row: 開始行 / 終了行",
        "grid-column: $1 / $2;",
        "grid-row: $3 / $4;"
      ],
      "description": "グリッドレイアウト用の位置指定"
    },
  
    "_comment_border": "Border",
    "bo": {
      "prefix": "border",
      "body": [
        "// ============================================",
        "// 要素の全体の境界線を設定",
        "// $1: 線の太さ, $2: 線の色",
        "border: $1 solid $2;"
      ],
      "description": "全体のボーダー"
    },
  
    "bob": {
      "prefix": "border-bottom",
      "body": [
        "// ============================================",
        "// 下線のみ設定",
        "// $1: 線の太さ, $2: 線の色",
