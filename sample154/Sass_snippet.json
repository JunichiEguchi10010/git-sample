    "_comment_position": "position配置",
    "top50": {
      "prefix": "top-50%",
      "body": [
        "// ============================================",
        "// 要素を縦方向中央に配置",
        "top: 50%;",
        "transform: translateY(-50%);"
      ],
      "description": "縦中央揃え"
    },
  
    "left50": {
      "prefix": "left-50%",
      "body": [
        "// ============================================",
        "// 要素を横方向中央に配置",
        "left: 50%;",
        "transform: translateX(-50%);"
      ],
      "description": "横中央揃え"
    },
  
    "tl50": {
      "prefix": "top-left-50%",
      "body": [
        "// ============================================",
        "// 要素を縦横中央に配置",
        "top: 50%;",
        "left: 50%;",
        "transform: translate(-50%, -50%);"
      ],
      "description": "縦横中央揃え"
    }
  }