{
    "_comment_breakpoint": "ブレイクポイント (レスポンシブ対応)",
    "pc": {
      "prefix": "pc",
      "body": ["@include mq(pc) {", "    $1 // PC向けスタイルをここに記述", "}"],
      "description": "PC向けメディアクエリ"
    },
  
    "md": {
      "prefix": "md",
      "body": ["@include screen(md) {", "    $1 // 中型デバイス用スタイル", "}"],
      "description": "中型デバイス向けメディアクエリ"
    },
  
    "tab": {
      "prefix": "tab",
      "body": ["@include mq(tab) {", "    $1 // タブレット向けスタイル", "}"],
      "description": "タブレット向けメディアクエリ"
    },
  
    "sp": {
      "prefix": "sp",
      "body": ["@include mq(sp) {", "    $1 // スマホ向けスタイル", "}"],
      "description": "スマホ向けメディアクエリ"
    },
  
    "media-min": {
      "prefix": "media-min",
      "body": [
        "@media screen and (min-width: $1px) {",
        "    $2 // 指定幅以上で適用",
        "}"
      ],
      "description": "任意の最小幅メディアクエリ"
    },
  
    "media-max": {
      "prefix": "media-max",
      "body": [
        "@media screen and (max-width: $1px) {",
        "    $2 // 指定幅以下で適用",
        "}"
      ],
      "description": "任意の最大幅メディアクエリ"
    },
  
    "_comment_color": "カラー (テキスト/背景)",
    "cb": {
      "prefix": "color-base",
      "body": ["color: \\$base-color; // 基本テキストカラー"],
      "description": "テキストをbase-colorに"
    },
  
    "cw": {
      "prefix": "color-white",
      "body": ["color: \\$white; // 白色テキスト"],
      "description": "テキストをwhiteに"
    },
  
    "bb": {
      "prefix": "bg-base",
      "body": ["background: \\$base-color; // 背景をbase-colorに"],
      "description": "背景色をbase-colorに"
    },
  
    "bg": {
      "prefix": "bg-bg",
      "body": ["background: \\$bg-color; // 背景をbg-colorに"],
      "description": "背景色をbg-colorに"
    },
  
    "bg-white": {
      "prefix": "bg-white",
      "body": ["background: \\$white; // 背景を白色に"],
      "description": "背景色をwhiteに"
    },
  
    "bt": {
      "prefix": "bg-transparent",
      "body": ["background: transparent; // 背景を透明に"],
      "description": "背景を透明にする"
    },
  
    "_comment_spacing": "余白 (margin/padding)",
