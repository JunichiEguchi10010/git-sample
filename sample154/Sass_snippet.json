      ],
      "description": "左ボーダー"
    },
  
    "_comment_nth": "n番目の要素",
    "nth": {
      "prefix": "nth-child",
      "body": [
        "// ============================================",
        "// n番目の子要素にスタイルを適用",
        "&:nth-child($1) {",
        "    $2",
        "}"
      ],
      "description": "nth-child指定"
    },
  
    "not-nth-child": {
      "prefix": "not-nth-child",
      "body": [
        "// ============================================",
        "// n番目の子要素以外にスタイルを適用",
