// Prisma Client の生成設定
generator client {
  provider = "prisma-client-js"       // Prisma Client を JavaScript/TypeScript で使用するための設定
  output   = "../generated/prisma"    // 生成されたクライアントコードの出力先ディレクトリ
}

// データベース接続設定
datasource db {
  provider = "postgresql"             // 使用するデータベースの種類（ここでは PostgreSQL）
  url      = env("DATABASE_URL")      // 環境変数から接続URLを取得（セキュリティと柔軟性のため）
}
